# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/disease_community

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Auth0 - Frontend
NEXT_PUBLIC_AUTH0_DOMAIN=your-tenant.us.auth0.com
NEXT_PUBLIC_AUTH0_CLIENT_ID=your-client-id
NEXT_PUBLIC_AUTH0_AUDIENCE=https://api.disease-community.com
NEXT_PUBLIC_AUTH0_CALLBACK_URL=http://localhost:3000/api/auth/callback

# GCP Configuration
GCP_PROJECT_ID=your-project-id
GCP_REGION=asia-northeast1

# Google Cloud Storage (Image Upload)
GCS_BUCKET_NAME=your-bucket-name
GCS_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# Alternative: Set GOOGLE_APPLICATION_CREDENTIALS_JSON with the JSON content directly

# Vercel Configuration
