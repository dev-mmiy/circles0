VERCEL_ORG_ID=your-org-id
VERCEL_PROJECT_ID=your-project-id

# Auth0 - Backend
AUTH0_DOMAIN=your-tenant.us.auth0.com
AUTH0_AUDIENCE=https://api.disease-community.com
